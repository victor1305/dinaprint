{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["node_modules", ".next", "out", "build", "dist", "public"]
	}
}
